{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "noDefaultExport": "off",
        "useShorthandAssign": "error",
        "noParameterAssign": "error",
        "useSelfClosingElements": "error"
      },
      "nursery": {
        "useImportRestrictions": "off"
      },
      "complexity": {
        "noUselessFragments": "off"
      },
      "correctness": {
        "noUndeclaredVariables": {
          "level": "error"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": true,
      "indentStyle": "space",
      "semicolons": "asNeeded",
      "trailingComma": "all",
      "jsxQuoteStyle": "double",
      "quoteStyle": "single"
    },
    "globals": ["test", "describe", "expect", "afterAll", "afterEach", "beforeAll", "beforeEach", "vi"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 140,
    "lineEnding": "lf"
  }
}
